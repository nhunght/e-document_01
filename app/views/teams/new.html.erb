<% if @organization.has_admin? current_user %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 group-form">
      <h1 class="title"><%= t "team.add.create_new_team" %></h1>
      <%= form_for [@team.organization, @team] do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit t("team.submit"), class: "btn btn-primary btn-add" %>
      <% end %>
    </div>
  </div>
<% end %>
