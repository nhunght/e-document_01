<!DOCTYPE html>
<html>
  <head>
    <title><%= t ".admin" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbolinks-track": true  %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/admin">
            <span><%= t ".admin" %><%= t(".page") %></span>
          </a>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-right site-admin">
            <% if user_signed_in? %>
              <li class="dropdown navc">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-user-circle"></i>
                  <%= current_user.name %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu admin">
                  <li>
                    <%= link_to t(".client_site"), root_path %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(".log_out"),
                      destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row content-work">
        <div class="sidebar col-md-2">
          <ul id="nav">
            <li>
              <a class="selected" href="/admin">
                <i class="fa fa-dashboard"></i><%= t ".dashboard" %>
              </a>
            </li>
            <li>
              <%= link_to admin_documents_path do %>
                <i class="fa fa-file-text-o"></i>
                <%= t ".file_upload" %>
              <% end %>
            </li>
            <li>
              <%= link_to admin_users_path do %>
                <i class="fa fa-user-circle-o"></i>
                <%= t ".list_user" %>
              <% end %>
            </li>
            <li>
              <%= link_to admin_buycoins_path do %>
                <i class="fa fa-product-hunt"></i>
                <%= t ".request_coin" %>
              <% end %>
            </li>
            <li>
              <%= link_to admin_imageslides_path do %>
                <i class="fa fa-product-hunt"></i>
                <%= t ".imageslides" %>
              <% end %>
            </li>
          </ul>
        </div>
        <div class="content col-md-10 col-md-offset-2">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="footer container-fluid">

    </div>
  </body>
</html>
