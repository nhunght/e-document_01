<div class="view-document col-md-9 text-center">
  <div class="row">
  <div class="col-md-4">
    <h2 class="text-center"><%= @document.name %></h2>
  </div>
  <div class="col-md-8 text-left">
    <span>
      <%= social_share_button_tag(@document.name) %>
    </span>
  </div>
  </div>
  <div class="row view-two">
    <div class="col-md-8 text-left">
      <p class="author_info">
        <span><%= t ".share_by" %></span>
        <span class="user_name">
          <%= link_to @document.user.name, @document.user %>
        </span>
        <span><%= t ".dash" %></span>
        <span><%= t ".date" %></span>
        <span class="document_date">
          <%= @document.created_at.strftime(Settings.format_date) %>
        </span>
        <span><%= t ".dash" %></span>
        <span class="document_size"><%= @document.user.documents.size %></span>
        <span><%= t ".documents" %></span>
      </p>
      <div class="row">
        <div class="col-md-3">
          <p class="favorite_document">
            <span>
              <%= render "favorite_form" if user_signed_in? %>
            </span>
          </p>
        </div>
        <div class="col-md-9">
          <p class="text-left">
            <span class="fav-count pull-left" id="fav_count">
              <%= @document.favorites.count %>
            </span>
          </p>
          <% if user_signed_in? %>
            <% @download_free = @document_sp.get_download_free(current_user) %>
            <% if @document.user == current_user %>
              <%= form_for current_user.downloads.build do |f| %>
                <%= f.hidden_field :document_id, value: @document.id %>
                <%= f.hidden_field :count_download, value: @download_free %>
                <%= button_tag "", class: "btn btn-default button-2",
                  id: "btn_download" do %>
                  <i class="fa fa-download"></i>
                  <span><%= t ".download" %></span>
                <% end %>
              <% end %>
            <% else %>
              <% if @download_free < Settings.count_free_download %>
                <%= form_for current_user.downloads.build do |f| %>
                  <%= f.hidden_field :document_id, value: @document.id %>
                  <%= f.hidden_field :count_download, value: @download_free %>
                  <%= button_tag "", class: "btn btn-default button-2",
                    id: "btn_download" do %>
                    <i class="fa fa-download"></i>
                    <span><%= t ".download" %></span>
                  <% end %>
                <% end %>
              <% else %>
                <% if current_user.point >= Settings.coin_down %>
                  <%= form_for current_user.downloads.build do |f| %>
                    <%= f.hidden_field :document_id, value: @document.id %>
                    <%= f.hidden_field :count_download, value: @download_free %>
                    <%= button_tag "", class: "btn btn-default button-2",
                      id: "btn_download" do %>
                      <i class="fa fa-download"></i>
                      <span><%= t ".download" %></span>
                    <% end %>
                  <% end %>
                <% else %>
                  <p class="not_enought_coin">
                    <%= t ".please_click_1" %>
                    <%= link_to t(".here"), new_buycoin_path %><%= t ".to_buycoin" %>
                  </p>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          <% if @document.user == current_user %>
            <%= link_to document_path(@document), method: :delete,
              class: "btn btn-default delete-doc", data: {confirm: t(".delete_confirm")} do %>
              <span class="fa fa-trash-o"></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4 text-center benphai">
      <div class="row">
        <div class="col-md-6">
          <p class="views_count" id="download_count">
          <% if user_signed_in? %>
            <% if @download_free >= Settings.count_free_download %>
              <%= Settings.coin_when_nonfree %>
            <% else %>
              <%= Settings.coin_when_free %>
            <% end %>
          <% else %>
            <%= Settings.coin_when_free %>
          <% end %>
          </p>
          <p><%= t ".coins" %></p>
        </div>
        <div class="col-md-6">
          <p class="views_count"><%= @document.view %></p>
          <p><%= t ".views" %></p>
        </div>
      </div>
    </div>
  </div>
  <% if @document.attachment.url.blank? %>
    <h2><%= t ".document_blank" %></h2>
  <% else %>
    <iframe src="<%= @document.attachment.url %>" style="width:800px; height:700px;" frameborder="0" id="iframe">
    </iframe>
  <% end %>
  <hr>
  <p class="tags">
    <% load_categories.each do |category| %>
      <i class="fa fa-tags"></i>
      <span><%= link_to category.name, category_path(category) %></span>
    <% end %>
  </p>
  <hr>
  <div class="tab-content">
    <div id="comment">
      <h3 class="tittle-comment text-left">
        <i class="fa fa-comments-o"></i><%= t ".comment" %>
        <%= t ".open" %><span class="comment-count"><%= @document.comments.count %></span><%= t ".close" %>
      </h3>
      <% if user_signed_in? %>
        <span class="header-comment pull-left">
          <%= t ".write_your_comment" %>
        </span>
        <div class="form-group">
          <%= form_for [@document, @document.comments.new], remote: true do |f| %>
            <%= f.text_area :content, class: "form-control",
              placeholder: t(".compose_new_comment"), class: "form-control",
              rows: Settings.rows, required: true %>
            <%= f.submit t(".submit"), class: "btn btn-default btn_comment pull-right",
              id: "comment-btn" %>
          <% end %>
        </div>
      <% else %>
        <%= t ".please_click" %>
        <%= link_to t(".here"), new_user_session_path %><%= t ".to_login" %>
      <% end %>
      <div class="list-comment">
        <ul id="comments">
          <%= render @document_sp.list_comments @document %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="col-md-3">
  <div class="row review-document">
    <div class="header-review">
      <h3 class="text-left rss">
        <i class="fa fa-rss"></i><%= t ".review" %>
      </h3>
      <% if @document.rate_average.present? %>
        <% rate_average = @document.rate_average.round(Settings.round) %>
      <% else %>
        <% rate_average = 0 %>
      <% end %>
      <div class="star_rewview_document <%= t "hidden" if rate_average.nil? %>">
        <h3>
          <span><%= t "documents.star" %></span>
          <strong id="star_rewview_document" class="stat">
            <% if rate_average.present? %>
              <%= rate_average %>
            <% end %>
          </strong>
          <i class="fa fa-star-o"></i>
        </h3>
        <p class="notice_review"><%= t ".please_give_me_your_review" %></p>
        <p>
          <% if @review.present? %>
            <% if @review.id.nil? %>
              <% @button = t("documents.add_review") %>
            <% else %>
              <% @button = t("documents.update_review") %>
            <% end %>
          <% end %>
          <div id="button_create" class="btn-review-1">
            <a type="button" class="btn btn-default mynewreview pull-right"
              data-toggle="modal" data-target="#mynewreview"
              ><%= @button %></a>
          </div>
        </p>
      </div>
    </div>
    <div class="reviews-index">
      <% @document_sp.list_reviews(@document).each do |review| %>
        <%= render partial: "reviews/review", object: review %>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <%= render "form_review" %>
    <% end %>
  </div>
  <div class="row">
    <% if user_signed_in? && @document.user == current_user %>
      <%= render "form_share" %>
    <% end %>
  </div>
  <% if @document.serie %>
    <div class="row">
      <h3><%= link_to @document.serie.name, @document.serie %></h3>
      <% @document_sp.load_documents_in_series(@document).each do |document| %>
        <div class="row docs-serie">
          <h4>
            <% if @document.id == document.id %>
              <%= link_to document.name, document, class: "docs-serie" %>
            <% else %>
              <%= link_to document.name, document %>
            <% end %>
          </h4>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
