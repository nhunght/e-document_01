<div class="header">
  <div class="container-fluid">
    <div class="img-back row-fluid">
      <div id="my_carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#my_carousel" data-slide-to="0" class="active"></li>
          <li data-target="#my_carousel" data-slide-to="1"></li>
          <li data-target="#my_carousel" data-slide-to="2"></li>
          <li data-target="#my_carousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <% if load_image.any? %>
            <% load_image.each do |image| %>
              <div class="item">
                <% if image.image.present? %>
                  <%= image_tag image.image.url, class: "img-responsive" %>
                <% else %>
                  <%= image_tag Setting.image, class: "img-responsive" %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="left carousel-control" href="#my_carousel" role="button"
          data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only"><%= t ".previous" %></span>
        </a>
        <a class="right carousel-control" href="#my_carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only"><%= t ".next" %></span>
        </a>
      </div>
    </div>
    <div class="contact">
      <p><%= t ".question" %>
        <i class="fa fa-phone"></i>
        <a href="#"><%= t ".phone" %></a>
        <i class="fa fa-envelope-o"></i>
        <a href="#"><%= t ".mail" %></a>
      </p>
    </div>
    <div class="header-info">
      <div class="row">
        <div class="col-md-5 col-md-offset-1 text-center">
          <h1>
            <span class="one-p"><%= t ".thoudrand" %></span>
            <span class="two-p"><%= t ".file" %></span>
          </h1>
          <h3><%= t ".know" %></h3>
          <a href="#" class="btn btn-default nut1"><%= t ".register" %></a>
        </div>
        <div class="col-md-5">
        </div>
      </div>
    </div>
  </div>
</div>
