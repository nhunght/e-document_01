<div id="upload-modal" class="modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="tittle text-center"><%= t ".upload_file" %></h4>
      </div>
      <div class="row modal-body">
        <div class="col-md-12">
          <%= form_for [@organization, @support.document],html: {multipart: true} do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", required: "true",
              maxlength: Settings.document_length %>
            <%= f.label :description %>
            <%= f.text_area :description, placeholder:
              t(".compose_description"), class: "form-control", rows: Settings.rows %>
            <div class="row">
              <div class="col-md-12">
                <%= f.label :attachment %>
                <%= f.file_field :attachment %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 category_doc_upload">
              <p><%= t ".category" %></p>
                <%= f.select :category_id, options_for_select(load_categories.collect{
                  |category| [category.name, category.id]}),
                  {class: "btn btn-default", include_blank: t(".all")}, required: true %>
              </div>
              <div class="col-md-6 serie_doc_upload">
                <p>
                  <b id="series-current"><%= t ".series" %></b>
                  <a id="create-series"><%= t ".create_serie" %></a>
                </p>
                <div id="create-series-area">
                  <input type="text" name="series_name" class="form-control">
                </div>
                <div id="choose-series">
                  <%= f.select :serie_id, options_for_select(load_series(current_user, @organization.id).collect{
                    |serie| [serie.name, serie.id]}),
                    {class: "btn btn-default", include_blank: t(".all")} %>
                </div>
              </div>
            </div>
            <div class="row status_upload">
              <div class="col-md-12">
                <%= f.radio_button :status_upload, Settings.value_global, checked: true %>
                <%= f.label :status_upload, Settings.global, value: Settings.value_global %>
                <%= f.radio_button :status_upload, Settings.value_shared %>
                <%= f.label :status_upload, Settings.shared, value: Settings.value_shared %>
                <% if @organization.has_admin? current_user %>
                  <%= f.radio_button :status_upload, Settings.value_individual %>
                  <%= f.label :status_upload, Settings.individual,
                    value: Settings.value_individual %>
                <% end %>
              </div>
            </div>
            <div class="modal-footer">
              <%= f.submit t(".upload"), class: "btn btn-default" %>
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <%= t ".close" %>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
