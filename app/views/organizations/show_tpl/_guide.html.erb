<div id="my-Guide" class="modal" role="dialog">
  <% if @organization.guide_id.nil? %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t "organization.show.guide" %></h4>
        </div>
        <div class="modal-body">
          <p><%= t "none" %></p>
        </div>
        <div class="modal-footer">
          <% if @support.read_guide(current_user).present? %>
            <div class="close_guide">
              <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">
                <%= t "agree" %>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <% if @support.guide.attachment.url.blank? %>
      <h2><%= t ".document_blank" %></h2>
    <% else %>
      <div id="embed_guide">
        <embed src="<%= @support.guide.attachment.url %>"
          style="width:100%; height:100%;" frameborder="0" id="show_guide" >
      </div>
    <% end %>
  <% end %>
  <% if @support.read_guide(current_user).present? %>
    <div class="close_guide">
      <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">
        <%= t "agree" %>
      </button>
    </div>
  <% end %>
</div>
