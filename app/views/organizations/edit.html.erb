<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 group-edit">
    <h1 class="title"><%= t ".edit_organization" + @organization.name %></h1>
    <%= form_for @organization do |f| %>
      <%= f.label :picture %>
      <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png",
        class: "btn-choose-picture" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.submit (t ".edit_organization"), class: "btn btn-edit",
        id: "btn-add-organization" %>
    <% end %>
    <%= link_to @organization, method: :delete,
      data: {confirm: (t ".are_you_sure")} do %>
      <button class="btn btn-delete"><%= t ".delete" %></button>
    <% end %>
  </div>
</div>
